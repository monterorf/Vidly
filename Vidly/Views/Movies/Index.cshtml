@model List<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Movies</h1>

@if (!Model.Any())
{
    <text>We don't have any movies yet</text>
}
else
{
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Movie</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
                <tr>
                    <td>@movie.Name</td>
                </tr>
            }

        </tbody>
    </table>
}

